<%= simple_form_for [@captain] do |f| %>
  <%= f.input :name, placeholder: 'Name of the Captain', required: true %>
  <%= f.input :description, placeholder: 'Description of the Captain', required: true %>
  <%= f.input :life_point %>
  <%= f.input :attack_power, label: "Power of the attack" %>
  <%= f.input :fav_attack, label: "Favorite attack" %>
  <%= f.input :photo, as: :attachinary %>
  <%= f.submit "Submit", class: "btn btn-danger" %>
<% end %>
