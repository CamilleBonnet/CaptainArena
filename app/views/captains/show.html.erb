<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">

      <h1><%= @captain.name  %></h1>
      <p><%=@captain.description %></p>
      <ul>
        <li>Favorite Attack: <%= @captain.fav_attack %></li>
        <li>Life Point: <%= @captain.life_point  %></li>
        <li>Attack Power <%= @captain.attack_power %></li>
        <li><%= link_to "Edit Captain", edit_captain_path(@captain), class:"btn btn-warning" %></li>
        <li><%= link_to "Delete Captain", captain_path(@captain), method: :delete, data: { confirm: "Are you sure to delete #{@captain.name} ?" }, class:"btn btn-primary" %></li>
      </ul>
    </div>
  </div>
</div>
