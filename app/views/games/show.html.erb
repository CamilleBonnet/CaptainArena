<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= render 'shared/game_card', game: @game %>
      <div class="text-center">
        <% if @game.status == 'done' %>
          <%= link_to "Fight !", fight_game_path, class:"btn btn-danger disabled" %>
        <% else %>
          <%= link_to "Fight !", fight_game_path, class:"btn btn-danger" %>
        <% end %>
        <%= link_to "Back to Arena", arena_path, class:"btn btn-success" %>
      </div>
    </div>
  </div>
</div>
